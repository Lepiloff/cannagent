# Database Configuration (External database from cannamente project)
DATABASE_URL=postgresql://myuser:mypassword@host.docker.internal:5432/mydatabase
POSTGRES_DB=mydatabase
POSTGRES_USER=myuser
POSTGRES_PASSWORD=mypassword
POSTGRES_HOST=host.docker.internal
POSTGRES_PORT=5432

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# FastAPI Configuration
API_V1_STR=/api/v1
PROJECT_NAME=AI Budtender
DEBUG=true

# Vector Search Configuration
EMBEDDING_MODEL=text-embedding-ada-002
VECTOR_DIMENSION=1536
SEARCH_LIMIT=5

# Mock Mode (true to work without OpenAI API)
MOCK_MODE=true

# Redis Configuration (for caching)
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring & Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Performance
CACHE_TTL=300
MAX_CONNECTIONS=100 