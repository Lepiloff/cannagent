# Cannamente Database Configuration (External source database)
CANNAMENTE_DATABASE_URL=postgresql://myuser:mypassword@host-gateway:5432/mydatabase
CANNAMENTE_POSTGRES_DB=mydatabase
CANNAMENTE_POSTGRES_USER=myuser
CANNAMENTE_POSTGRES_PASSWORD=mypassword
CANNAMENTE_POSTGRES_HOST=host-gateway
CANNAMENTE_POSTGRES_PORT=5432

# AI Budtender Database Configuration (Local application database)
DATABASE_URL=postgresql://user:password@db:5432/ai_budtender
POSTGRES_DB=ai_budtender
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# FastAPI Configuration
API_V1_STR=/api/v1
PROJECT_NAME=AI Budtender
DEBUG=true

# Vector Search Configuration
EMBEDDING_MODEL=text-embedding-ada-002
VECTOR_DIMENSION=1536
SEARCH_LIMIT=5

# Mock Mode (true to work without OpenAI API)
MOCK_MODE=true

# Redis Configuration (for caching)
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring & Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Performance
CACHE_TTL=300
MAX_CONNECTIONS=100

# Port Configuration
API_PORT=8001
API_INTERNAL_PORT=8000
METRICS_EXTERNAL_PORT=9091
DB_EXTERNAL_PORT=5433
REDIS_EXTERNAL_PORT=6380

# Cannamente Integration
CANNAMENTE_BASE_URL=http://localhost:8000
STRAIN_URL_PATTERN=/strain/{slug}/

# Context-Aware Architecture v2.0 Configuration
USE_CONTEXTUAL_RAG=true
UNIFIED_LLM_TIMEOUT=3000
FALLBACK_ON_TIMEOUT=true
LLM_RETRY_ATTEMPTS=1

# Session Management
SESSION_TTL_HOURS=4
SESSION_BACKUP_DAYS=7
SESSION_RESTORE_ENABLED=true

# Embedding Caching
EMBEDDING_CACHE_TTL=86400
QUERY_EMBEDDING_CACHE_TTL=3600
CRITERIA_CACHE_TTL=300

# Performance Optimization
MAX_STRAINS_IN_MEMORY=20
MAX_CONVERSATION_HISTORY=50
SEMANTIC_SEARCH_THRESHOLD=0.7
MIN_CONFIDENCE_FOR_ACTION=0.3

# Monitoring & Debugging
ENABLE_PERFORMANCE_METRICS=true
LOG_SLOW_QUERIES=true
SLOW_QUERY_THRESHOLD_MS=2000 